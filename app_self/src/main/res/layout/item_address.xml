<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190px"
    android:layout_margin="10px"
    android:background="@drawable/shape_white_bg_cir">

    <TextView
        android:id="@+id/tvChoose"
        android:layout_width="60px"
        android:layout_height="32px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:background="@drawable/shape_stroke_theme"
        android:gravity="center"
        android:text="默认"
        android:textColor="@color/theme_color"
        android:textSize="18px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAddressDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="42px"
        android:text="江苏省南京市浦口区小牛智能科技 "
        android:textColor="@color/text_color_1a"
        android:textSize="35px"
        app:layout_constraintLeft_toRightOf="@id/tvChoose"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAddressName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="35px"
        android:text="张三那"
        android:textColor="@color/color_999"
        android:textSize="28px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddressDesc" />

    <TextView
        android:id="@+id/tvAddressTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:text="18723456789"
        android:textColor="@color/color_999"
        android:textSize="28px"
        app:layout_constraintLeft_toRightOf="@id/tvAddressName"
        app:layout_constraintTop_toTopOf="@id/tvAddressName" />


    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="36px"
        android:layout_height="36px"
        android:layout_marginRight="30px"
        android:src="@mipmap/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="36px"
        android:layout_height="36px"
        android:layout_marginRight="30px"
        android:src="@mipmap/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivDelete"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>