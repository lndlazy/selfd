<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="500dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_bg_cir">
    <EditText
        android:id="@+id/etInput"
        android:layout_width="1px"
        android:layout_height="1px"
        android:enabled="true"
        android:focusable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFailSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="45s"
        android:textColor="@color/text_color_33"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="60dp"
        android:src="@mipmap/ic_fail_red_x"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFailSeconds" />

    <TextView
        android:id="@+id/tvFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/charge_fail_retry_later"
        android:textColor="@color/text_color_oa"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/ivX"
        app:layout_constraintLeft_toRightOf="@id/ivX"
        app:layout_constraintTop_toTopOf="@id/ivX" />

    <TextView
        android:id="@+id/tvExit"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_login_out_cancel"
        android:gravity="center"
        android:text="关闭并退出"
        android:textColor="@color/theme_color"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFail" />

    <TextView
        android:id="@+id/tvContain"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/shape_theme_color_login"
        android:gravity="center"
        android:text="继续充值"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFail" />


</androidx.constraintlayout.widget.ConstraintLayout>