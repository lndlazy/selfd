<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="110px"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivDialogImg"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@mipmap/ic_menu_default" />

    <TextView
        android:id="@+id/tvDialogName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="秘制卤肉饭"
        android:textColor="@color/text_color_1a"
        android:textSize="32px" />

    <TextView
        android:id="@+id/tvDialogFen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135px"
        android:text="小份"
        android:textColor="@color/text_color_666"
        android:textSize="26px" />

    <TextView
        android:id="@+id/tvDialogCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="x1"
        android:textColor="@color/text_color_666"
        android:textSize="26px" />

    <TextView
        android:id="@+id/tvDialogMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:text="￥2.00"
        android:textColor="@color/text_color_33"
        android:textSize="35px" />


</LinearLayout>