<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/ivPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_menu_food_show"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="西红柿炒鸡蛋/早餐"
        android:textColor="@color/text_color_33"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/ivPic"
        app:layout_constraintLeft_toRightOf="@id/ivPic"
        app:layout_constraintTop_toTopOf="@id/ivPic" />

    <net.xnzn.app.selfdevice.widget.RatingStar
        android:id="@+id/rs"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/ivPic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPic"
        app:starFocus="@mipmap/ic_comment_start_checked"
        app:starNormal="@mipmap/ic_comment_start_unchecked"
        app:starNumber="5" />

</androidx.constraintlayout.widget.ConstraintLayout>