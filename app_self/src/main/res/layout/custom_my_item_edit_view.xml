<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my_item_height"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvItemLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61px"
        android:textColor="@color/text_color_33"
        android:textSize="35px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/etItemRight"
        android:layout_width="200px"
        android:layout_height="wrap_content"
       app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/my_item_margin_right"
        android:background="@null"
        android:gravity="right"
        android:hint="请输入"
        android:singleLine="true"
        android:textColor="@color/text_color_33"
        android:textColorHint="@color/text_color_ccc"
        android:textSize="35px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>