<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="884px"
    android:layout_height="800px"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_bg_cir">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67px"
        android:text="订单详情"
        android:textColor="@color/text_color_33"
        android:textSize="35px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <me.jingbin.library.ByRecyclerView
        android:id="@+id/dRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56px"
        android:layout_marginTop="60px"
        android:layout_marginRight="56px"
        android:minHeight="250px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="0dp"
        android:layout_height="90px"
        android:layout_marginLeft="142px"
        android:layout_marginRight="142px"
        android:layout_marginBottom="90px"
        android:background="@drawable/shape_theme_color_login"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/white"
        android:textSize="35px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>